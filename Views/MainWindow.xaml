<Window x:Class="PontBascule.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Pont de Bascule - Gestion des Pesées" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" 
                Padding="20" CornerRadius="5" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="PONT DE BASCULE" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Système de Gestion des Pesées" 
                          FontSize="14" Foreground="White" 
                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Informations Camion -->
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" 
                Padding="15" CornerRadius="5" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="N° Camion:" FontWeight="Bold"/>
                    <TextBox Text="{Binding TruckNumber, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Transporteur:" FontWeight="Bold"/>
                    <TextBox Text="{Binding Transporter, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Produit:" FontWeight="Bold"/>
                    <TextBox Text="{Binding Product, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Zone de Pesée -->
        <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="1" 
                Padding="20" CornerRadius="5" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Affichage Poids -->
                <Border Grid.Row="0" Background="#F0F0F0" Padding="20" 
                        CornerRadius="5" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="POIDS ACTUEL" 
                                  FontSize="16" FontWeight="Bold" 
                                  HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding CurrentWeight, StringFormat='{}{0:N0} kg'}" 
                                  FontSize="48" FontWeight="Bold" 
                                  HorizontalAlignment="Center" 
                                  Foreground="{StaticResource AccentColor}"/>
                        <TextBlock Text="{Binding ScaleStatus}" 
                                  FontSize="12" HorizontalAlignment="Center" 
                                  Margin="0,10,0,0" Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <!-- Historique -->
                <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" 
                        Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Dernières Pesées" FontWeight="Bold" Margin="0,0,0,10"/>
                        <DataGrid ItemsSource="{Binding WeighingHistory}" 
                                 AutoGenerateColumns="False" 
                                 IsReadOnly="True"
                                 Height="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date/Heure" Binding="{Binding Timestamp, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="140"/>
                                <DataGridTextColumn Header="N° Camion" Binding="{Binding TruckNumber}" Width="*"/>
                                <DataGridTextColumn Header="Poids (kg)" Binding="{Binding Weight, StringFormat='{}{0:N0}'}" Width="120"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding WeighingType}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Boutons Actions -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                           HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="PESÉE ENTRÉE" 
                           Command="{Binding WeighInCommand}" 
                           Background="{StaticResource PrimaryColor}" 
                           Foreground="White" Width="150" Height="45"/>
                    <Button Content="PESÉE SORTIE" 
                           Command="{Binding WeighOutCommand}" 
                           Background="{StaticResource AccentColor}" 
                           Foreground="White" Width="150" Height="45"/>
                    <Button Content="IMPRIMER TICKET" 
                           Command="{Binding PrintTicketCommand}" 
                           Width="150" Height="45"/>
                    <Button Content="ENVOYER À SAP" 
                           Command="{Binding SendToSapCommand}" 
                           Width="150" Height="45"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Barre de statut -->
        <Border Grid.Row="3" Background="#2C3E50" Padding="10" 
                CornerRadius="5" Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="{Binding StatusMessage}" 
                          Foreground="White" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="SAP: " Foreground="White" VerticalAlignment="Center"/>
                    <Ellipse Width="10" Height="10" 
                            Fill="{Binding SapConnectionStatus}" Margin="5,0"/>
                    <TextBlock Text="Balance: " Foreground="White" 
                              VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <Ellipse Width="10" Height="10" 
                            Fill="{Binding ScaleConnectionStatus}" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
